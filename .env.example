# VyOS Router Manager API Configuration

# Deployment mode: "direct" (on VyOS) or "remote" (from another machine)
DEPLOYMENT_MODE=remote

# API Keys (format: name1:key1,name2:key2)
# Example: API_KEYS=admin:YOUR_ADMIN_KEY,readonly:YOUR_READONLY_KEY
API_KEYS=default:YOUR_API_KEY_HERE

# Server configuration
PORT=8000
HOST=0.0.0.0

# VyOS configuration
VYOS_CONFIG_PATH=/config
VYOS_DHCP_LEASES_FILE=/config/dhcpd.leases

# Connection cache time to live in seconds
CONNECTION_CACHE_TTL=300 